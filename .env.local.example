# ===================================
# ChiRho Events - Environment Variables
# ===================================
# Copy this file to .env.local and fill in your actual values

# -----------------------------------
# Database (Neon PostgreSQL)
# -----------------------------------
DATABASE_URL="postgresql://username:password@ep-xxxx.us-east-2.aws.neon.tech/chirhoevents?sslmode=require"

# -----------------------------------
# Authentication (Clerk)
# -----------------------------------
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_xxxxx"
CLERK_SECRET_KEY="sk_test_xxxxx"
NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/dashboard"
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/dashboard"

# -----------------------------------
# Payments (Stripe)
# -----------------------------------
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
STRIPE_SECRET_KEY="sk_test_xxxxx"
STRIPE_WEBHOOK_SECRET="whsec_xxxxx"

# -----------------------------------
# Email (Resend)
# -----------------------------------
RESEND_API_KEY="re_xxxxx"
RESEND_FROM_EMAIL="hello@chirhoevents.com"

# -----------------------------------
# File Storage (Cloudflare R2)
# -----------------------------------
R2_ACCOUNT_ID="xxxxx"
R2_ACCESS_KEY_ID="xxxxx"
R2_SECRET_ACCESS_KEY="xxxxx"
R2_BUCKET_NAME="chirhoevents"
R2_PUBLIC_URL="https://r2.chirhoevents.com"

# -----------------------------------
# Application Settings
# -----------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# -----------------------------------
# Admin/Seed Settings
# -----------------------------------
# Secret key for running database seeds via API
# Generate a strong random string for production
SEED_SECRET="your-super-secret-seed-key-change-this"

# -----------------------------------
# Optional Integrations
# -----------------------------------
# Google Sheets API (optional)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Mailchimp API (optional)
MAILCHIMP_API_KEY=""

# QuickBooks API (optional)
QUICKBOOKS_CLIENT_ID=""
QUICKBOOKS_CLIENT_SECRET=""
