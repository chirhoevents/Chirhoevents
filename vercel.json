{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "crons": [
    {
      "path": "/api/queue/cleanup",
      "schedule": "* * * * *"
    },
    {
      "path": "/api/cron/weekly-digest",
      "schedule": "0 6 * * 0"
    },
    {
      "path": "/api/cron/generate-invoices",
      "schedule": "0 9 1 * *"
    }
  ]
}
